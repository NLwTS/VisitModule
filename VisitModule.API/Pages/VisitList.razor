@page "/visits"
@inject VisitService VisitService

<h3>Список посещений</h3>

@if (visits == null)
{
    <p>Загрузка...</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Дата</th>
                <th>Студент</th>
                <th>Класс</th>
                <th>Присутствие</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var visit in visits)
            {
                <tr>
                    <td>@visit.VisitDate.ToShortDateString()</td>
                    <td>@visit.StudentId</td>
                    <td>@visit.ClassId</td>
                    <td>@(visit.IsPresent ? "Да" : "Нет")</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Visit>? visits;

    protected override async Task OnInitializedAsync()
    {
        visits = await VisitService.GetVisitsAsync();
    }
}
